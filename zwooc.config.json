{
  "example": {
    "$adapter": "vite-yarn",
    "$fragments": {
      "print": "echo $PWD && sleep 7"
    },
    "dev": {
      "build": {
        "$pre": {
          "fragments": ["print", "print2"]
        },
        "env": ["VITE_APP_TEST=build1"],
        "args": {
          "outDir": "dist"
        },
        "$post": {
          "command": "sleep 5"
        }
      },
      "watch": {
        "$pre": {
          "fragments": ["print", "print2"]
        },
        "$post": {
          "command": "sleep 5"
        }
      }
    },
    "dev2": {
      "build": {
        "base": "dev",
        "args": {
          "outDir": "dist2"
        }
      }
    },
    "$default": {
      "build": {
        "base": "dev"
      }
    }
  },
  "$fragments": {
    "print2": {
      "$default": "echo $PWD && sleep 3"
    },
    "print3": {
      "$default": "git status"
    }
  }
}
