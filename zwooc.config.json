{
  "example": {
    "$adapter": "vite-yarn",
    "$fragments": {
      "foo": {
        "$default": "echo $PWD && sleep 7",
        "dev": "echo 'BAR'"
      },
      "print": {
        "$default": "echo $PWD && sleep 7",
        "$pre": {
          "fragments": ["print2"],
          "profiles": {
            "dev": "build"
          },
          "command": "echo 'pre'"
        }
      }
    },
    "dev": {
      "build": {
        "$pre": {
          "fragments": ["print", "print2", "foo"]
        },
        "env": ["VITE_APP_TEST=build1"],
        "args": {
          "outDir": "dist"
        },
        "$post": {
          "command": "sleep 5"
        }
      },
      "watch": {
        "$pre": {
          "fragments": ["print", "print2"]
        },
        "__$post": {
          "command": "sleep 5"
        }
      }
    },
    "dev2": {
      "build": {
        "base": "dev",
        "args": {
          "outDir": "dist2"
        }
      },
      "watch": {
        "base": "dev",
        "args": {
          "port": "6000"
        }
      }
    },
    "$default": {
      "build": {
        "base": "dev"
      }
    }
  },
  "$fragments": {
    "print2": {
      "$default": "echo $PWD && sleep 3"
    },
    "print3": {
      "$default": "git status"
    }
  },
  "$compounds": {
    "test": {
      "profiles": {
        "dev": "watch",
        "dev2": "watch"
      }
    }
  }
}
