{
  "example": {
    "$adapter": "vite-yarn",
    "$fragments": {
      "print": {
        "build": "echo $PWD && exit 1 && sleep 7"
      }
    },
    "dev": {
      "build": {
        "$pre": {
          "fragments": ["print", "print2"]
        },
        "env": ["VITE_APP_TEST=build1"],
        "args": {
          "outDir": "dist"
        },
        "$post": {
          "command": "sleep 5"
        }
      },
      "run": true,
      "watch": true
    }
  },
  "$fragments": {
    "print2": {
      "build": "echo $PWD && exit 2 && sleep 3"
    }
  }
}
