{
  "example": {
    "$adapter": "vite-yarn",
    "$fragments": {
      "print": {
        "build": "echo $PWD"
      }
    },
    "dev": {
      "build": {
        "$pre": {
          "fragments": ["print", "print2"]
        },
        "env": ["VITE_APP_TEST=build1"],
        "args": {
          "outDir": "dist1"
        }
      },
      "run": true,
      "watch": true
    }
  },
  "$fragments": {
    "print2": {
      "build": "echo $PWD"
    }
  }
}
