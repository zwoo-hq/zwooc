{
  "frontend": {
    "$adapter": "vite",
    "$fragments": {
      "icons": {
        "build": "node ./src/modules/zwoo-icons/generate-icons.js"
      },
      "cards": {
        "build": "node ./scripts/buildCardAssets.js"
      },
      "typecheck": {
        "build": "vue-tsc --noEmit && echo \"\""
      },
      "wasm": {
        "build": "dotnet publish -c Release -p:RunAOTCompilation=true ../backend/ZwooWasmAdapter/ZwooWasmAdapter.csproj",
        "build:dev": "dotnet publish ../backend/ZwooWasmAdapter/ZwooWasmAdapter.csproj",
        "watch": "dotnet watch publish --project ../backend/ZwooWasmAdapter/ZwooWasmAdapter.csproj"
      }
    },
    "dev": {
      "build": true,
      "watch": {
        "includeFragments": ["wasm"]
      }
    },
    "prod": {
      "build": true,
      "run": true
    },
    "dev-instance": {
      "build": true
    },
    "tauri": {
      "build": {
        "args": {
          "outDir": "dist-tmp"
        },
        "alias": "prod",
        "env": ["VUE_APP_IS_TAURI=true"]
      }
    },
    "preview": {
      "run": true,
      "watch": true,
      "build": {
        "args": {
          "outDir": "dist-preview"
        }
      }
    },
    "dev-proxy": {
      "watch": true
    },
    "analyze": {
      "build": {
        "env": ["ANALYZE=true"],
        "alias": "prod",
        "skipFragments": true
      }
    },
    "test": {
      "run": {
        "mode": "foo",
        "project": "bar",
        "args": {
          "mode": "test"
        },
        "env": ["VUE_APP_IS_TAURI=true"],
        "alias": "prod",
        "$pre": {
          "fragments": ["typecheck", "icon", "cards", "wasm"]
        },
        "$post": {
          "command": "test"
        }
      },
      "watch": true
    },
    "$default": {
      "build": {
        "alias": "prod",
        "$pre": {
          "fragments": ["typecheck", "icon", "cards", "wasm"]
        }
      },
      "watch": {
        "alias": "dev"
      }
    }
  },
  "backend": {
    "$adapter": "dotnet",
    "api": {
      "project": "Zwoo.Backend"
    },
    "local": {
      "project": "Zwoo.Backend.LocalServer"
    },
    "ziad": {
      "project": "Zwoo..."
    }
  },
  "$compounds": {
    "full": {
      "watch": {
        "frontend": "dev",
        "backend": "dev"
      }
    }
  }
}
